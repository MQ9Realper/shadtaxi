<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <com.shadtaxi.shadtaxi.views.TxtSemiBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:orientation="horizontal">

        <com.shadtaxi.shadtaxi.views.Edt
            android:id="@+id/edtRegPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="@color/colorBlackLight"
            android:textColor="@color/colorBlack" />

        <com.shadtaxi.shadtaxi.views.TxtSemiBold
            android:id="@+id/txtShowRegistrationPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/string_show_password"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

</LinearLayout>
