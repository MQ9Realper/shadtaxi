<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="2dp">

    <View
        android:id="@+id/vehicleView"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="KBK 234R"
                android:textColor="@color/colorBlack"
                android:textSize="24sp" />

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtVehicleModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleNumber"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Toyota NZE"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtVehicleCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleModel"
                android:paddingBottom="12dp"
                android:text="4 pax"
                android:textColor="@color/colorBlackLight"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewActionDivider"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_above="@+id/txtActivateVehicle"
                android:background="@color/colorBlackLight" />

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtActivateVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:text="ACTIVATE"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageVehicle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/default_car" />

    </LinearLayout>

</android.support.v7.widget.CardView>