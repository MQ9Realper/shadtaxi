<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDriverImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/default_image"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Dennis M. Mwebia"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ratingDriverRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/colorAccent"
                android:numStars="5" />

            <com.shadtaxi.shadtaxi.views.Txt
                android:id="@+id/txtDriverDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11km away"
                android:textColor="@color/colorBlackLight"
                android:textSize="14sp" />

        </LinearLayout>

        <com.shadtaxi.shadtaxi.views.Btn
            android:id="@+id/btnDriverBook"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/drawable_driver_book"
            android:text="Book"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>

