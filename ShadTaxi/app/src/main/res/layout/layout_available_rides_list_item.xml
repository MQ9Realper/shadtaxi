<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDriverImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/default_image"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.shadtaxi.shadtaxi.views.TxtSemiBold
                android:id="@+id/txtDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dennis M. Mwebia"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ratingDriverRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/colorTriadic"
                android:numStars="5" />

            <com.shadtaxi.shadtaxi.views.Txt
                android:id="@+id/txtDriverDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11km away"
                android:textColor="@color/colorBlackLight"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shadtaxi.shadtaxi.views.Btn
            android:id="@+id/btnDriverCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_driver_call"
            android:drawableLeft="@drawable/ic_call_white_24dp"
            android:drawablePadding="-40dp"
            android:drawableStart="@drawable/ic_call_white_24dp"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"
            android:visibility="gone"
            android:text="Call"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <com.shadtaxi.shadtaxi.views.Btn
            android:id="@+id/btnDriverBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_driver_book"
            android:drawableLeft="@drawable/ic_done_all_white_24dp"
            android:drawablePadding="-40dp"
            android:drawableStart="@drawable/ic_done_all_white_24dp"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"
            android:text="Book"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>

