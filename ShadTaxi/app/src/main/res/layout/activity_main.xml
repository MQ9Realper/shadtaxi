<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.shadtaxi.shadtaxi.activities.MainActivity">

    <include
        layout="@layout/layout_custom_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGetStarted"
        android:layout_centerVertical="true" />

    <com.shadtaxi.shadtaxi.views.Btn
        android:id="@+id/buttonGetStarted"
        android:background="@drawable/drawable_get_started"
        android:layout_alignParentBottom="true"
        android:text="GET STARTED!"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
